                            <h3>UK</h3>
                            <div class="size-value" id="uk-size">--</div>
                            <div class="size-detail" id="uk-detail"></div>
                        </div>
                        <div class="size-card">
                            <div class="country-flag"></div>
                            <h3>US</h3>
                            <div class="size-value" id="us-size">--</div>
                            <div class="size-detail" id="us-detail"></div>
                        </div>
                        <div class="size-card">
                            <div class="country-flag"></div>
                            <h3>EU</h3>
                            <div class="size-value" id="eu-size">--</div>
                            <div class="size-detail" id="eu-detail"></div>
                        </div>
                        <div class="size-card">
                            <div class="country-flag"></div>
                            <h3>Italy</h3>
                            <div class="size-value" id="it-size">--</div>
                            <div class="size-detail" id="it-detail"></div>
                        </div>
                        <div class="size-card">
                            <div class="country-flag"></div>
                            <h3>Japan</h3>
                            <div class="size-value" id="jp-size">--</div>
                            <div class="size-detail" id="jp-detail"></div>
                        </div>
                        <div class="size-card">
                            <div class="country-flag"></div>
                            <h3>India</h3>
                            <div class="size-value" id="in-size">--</div>
                            <div class="size-detail" id="in-detail"></div>
                        </div>
                        <div class="size-card">
                            <div class="country-flag"></div>
                            <h3>Russia</h3>
                            <div class="size-value" id="ru-size">--</div>
                            <div class="size-detail" id="ru-detail"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="features">
            <div class="feature-card">
                <div class="feature-icon"></div>
                <h3>Shop Your Size</h3>
                <p>Get instant shopping links to major UK retailers with your exact measurements already filtered for easy shopping.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon"></div>
                <h3>Precise Calculations</h3>
                <p>Our algorithm factors in gender, waist style, and break preference to calculate your ideal inseam with professional accuracy.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon"></div>
                <h3>Global Sizing</h3>
                <p>See your size in 7 different international standardsUK, US, EU, Italian, Japanese, Indian, and Russian formats.</p>
            </div>
        </div>

        <div class="disclaimer">
            <p>* Sizing recommendations are for guidance only. Measurements may vary between brands. Always check individual brand size charts before purchasing.</p>
        </div>
    </div>

    <script>
        let currentUnit = 'cm';
        let currentGender = 'male';
        let currentWaist = 'low';
        let measurementType = 'height';
        let breakStyle = 'slight'; // Default to slight break (most popular)

        // Measurement type toggle functionality
        document.querySelectorAll('[data-measurement]').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('[data-measurement]').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                measurementType = this.dataset.measurement;
                
                const heightLabel = document.getElementById('height-label');
                const heightInput = document.getElementById('height');
                const measurementHelp = document.getElementById('measurement-help');
                
                if (measurementType === 'height') {
                    heightLabel.textContent = 'Your Height';
                    heightInput.placeholder = currentUnit === 'cm' ? 'Enter your height' : 'Enter your height';
                    measurementHelp.textContent = "We'll calculate your ideal jeans length based on your height";
                } else {
                    heightLabel.textContent = 'Jeans Inseam Length';
                    heightInput.placeholder = currentUnit === 'cm' ? 'Enter inseam length' : 'Enter inseam length';
                    measurementHelp.textContent = "We'll recommend your height range based on this jeans measurement";
                }
                
                // Clear the input when switching measurement types
                heightInput.value = '';
            });
        });

        // Gender toggle functionality
        document.querySelectorAll('[data-gender]').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('[data-gender]').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                currentGender = this.dataset.gender;
            });
        });

        // Waist style toggle functionality
        document.querySelectorAll('[data-waist]').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('[data-waist]').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                currentWaist = this.dataset.waist;
            });
        });

        // Break style toggle functionality
        document.querySelectorAll('[data-break]').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('[data-break]').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                breakStyle = this.dataset.break;
            });
        });

        // Unit toggle functionality
        document.querySelectorAll('[data-unit]').forEach(btn => {
            btn.addEventListener('click', function() {
                const siblings = this.parentElement.querySelectorAll('[data-unit]');
                siblings.forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                
                const newUnit = this.dataset.unit;
                const heightInput = document.getElementById('height');
                
                if (heightInput.value && newUnit !== currentUnit) {
                    const currentValue = parseFloat(heightInput.value);
                    if (newUnit === 'cm') {
                        heightInput.value = (currentValue * 2.54).toFixed(1);
                    } else {
                        heightInput.value = (currentValue / 2.54).toFixed(1);
                    }
                }
                
                currentUnit = newUnit;
                
                if (measurementType === 'height') {
                    heightInput.placeholder = currentUnit === 'cm' ? 'e.g., 175' : 'e.g., 69';
                } else {
                    heightInput.placeholder = currentUnit === 'cm' ? 'e.g., 81' : 'e.g., 32';
                }
            });
        });

        function calculateInseam() {
            const heightInput = document.getElementById('height');
            const waistSizeInput = document.getElementById('waist-size');
            const inputValue = parseFloat(heightInput.value);
            const waistSize = parseInt(waistSizeInput.value);
            
            if (!inputValue || inputValue <= 0) {
                const fieldName = measurementType === 'height' ? 'height' : 'inseam length';
                showResult(`Please enter a valid ${fieldName}`, '', '', null);
                return;
            }

            if (!waistSize || waistSize <= 0) {
                showResult('Please enter your waist size', '', '', null);
                return;
            }

            if (measurementType === 'height') {
                // Original calculation: Height to Inseam
                calculateFromHeight(inputValue, waistSize);
            } else {
                // Reverse calculation: Inseam to Height
                calculateFromInseam(inputValue, waistSize);
            }
        }

        function calculateFromHeight(height, waistSize) {
            // Convert to cm if needed
            const heightInCm = currentUnit === 'inches' ? height * 2.54 : height;
            
            // Base inseam ratio varies by gender
            let baseRatio;
            if (currentGender === 'male') {
                baseRatio = 0.47;
            } else if (currentGender === 'female') {
                baseRatio = 0.44;
            } else {
                baseRatio = 0.455;
            }
            
            // Adjust for waist style
            let waistAdjustment = 0;
            if (currentWaist === 'low') {
                waistAdjustment = 2.5;
            } else if (currentWaist === 'high') {
                waistAdjustment = -1.5;
            }
            
            // Calculate base inseam
            let inseamCm = heightInCm * baseRatio;
            let inseamInches = inseamCm / 2.54;
            
            // Apply waist adjustment
            inseamInches += waistAdjustment;
            
            // Apply break style adjustment
            // Break style affects how long the jeans should be
            let breakAdjustment = 0;
            switch(breakStyle) {
                case 'cropped':
                    breakAdjustment = -2.5; // Subtract 2.5" for cropped (shows ankle)
                    break;
                case 'no-break':
                    breakAdjustment = -0.5; // Slightly shorter (just touches shoe)
                    break;
                case 'slight':
                    breakAdjustment = 0; // Standard length (tiny fold)
                    break;
                case 'full':
                    breakAdjustment = 1.5; // Add 1.5" for full break (fabric stacks)
                    break;
            }
            
            inseamInches += breakAdjustment;
            inseamCm = inseamInches * 2.54;
            
            // Determine size category
            let sizeGuide = getSizeGuide(inseamInches, currentGender);

            const displayValue = currentUnit === 'cm' 
                ? `${Math.round(inseamCm)} cm`
                : `${Math.round(inseamInches)}"`;

            const waistStyleText = currentWaist.charAt(0).toUpperCase() + currentWaist.slice(1) + ' Waist';
            const genderText = currentGender.charAt(0).toUpperCase() + currentGender.slice(1);
            
            // Get break style description
            const breakStyleText = getBreakStyleText(breakStyle);

            // Generate product links
            const productLinks = generateProductLinks(waistSize, Math.round(inseamInches), currentGender);

            showResult(displayValue, `${genderText}  ${waistStyleText}  ${breakStyleText}`, sizeGuide, productLinks);
            
            // Update international sizes
            updateInternationalSizes(waistSize, Math.round(inseamInches), currentGender);
        }

        function getBreakStyleText(style) {
            switch(style) {
                case 'cropped': return 'Cropped';
                case 'no-break': return 'No Break';
                case 'slight': return 'Slight Break';
                case 'full': return 'Full Break';
                default: return 'Slight Break';
            }
        }

        function calculateFromInseam(inseamInput, waistSize) {
            // Convert to inches if needed
            const inseamInches = currentUnit === 'cm' ? inseamInput / 2.54 : inseamInput;
            
            // Reverse the break style adjustment to find the "standard" inseam
            let breakAdjustment = 0;
            switch(breakStyle) {
                case 'cropped':
                    breakAdjustment = -2.5;
                    break;
                case 'no-break':
                    breakAdjustment = -0.5;
                    break;
                case 'slight':
                    breakAdjustment = 0;
                    break;
                case 'full':
                    breakAdjustment = 1.5;
                    break;
            }
            
            let adjustedInseam = inseamInches - breakAdjustment;
            
            // Reverse adjust for waist style
            if (currentWaist === 'low') {
                adjustedInseam -= 2.5;
            } else if (currentWaist === 'high') {
                adjustedInseam += 1.5;
            }
            
            // Base ratio varies by gender
            let baseRatio;
            if (currentGender === 'male') {
                baseRatio = 0.47;
            } else if (currentGender === 'female') {
                baseRatio = 0.44;
            } else {
                baseRatio = 0.455;
            }
            
            // Calculate height from inseam
            const heightInches = adjustedInseam / baseRatio;
            const heightCm = heightInches * 2.54;
            
            const displayValue = currentUnit === 'cm' 
                ? `${Math.round(heightCm)} cm`
                : `${Math.round(heightInches)}"`;
                
            const heightFt = Math.floor(heightInches / 12);
            const heightIn = Math.round(heightInches % 12);
            
            const waistStyleText = currentWaist.charAt(0).toUpperCase() + currentWaist.slice(1) + ' Waist';
            const genderText = currentGender.charAt(0).toUpperCase() + currentGender.slice(1);
            const breakStyleText = getBreakStyleText(breakStyle);
            
            const sizeGuide = `These jeans with a ${Math.round(inseamInches)}" inseam and ${breakStyleText.toLowerCase()} styling are ideal for someone around ${heightFt}'${heightIn}" (${Math.round(heightCm)}cm) tall wearing ${waistStyleText.toLowerCase()}. The ${breakStyleText.toLowerCase()} will ${getBreakDescription(breakStyle)}`;
            
            // Generate product links with the actual inseam from the jeans
            const productLinks = generateProductLinks(waistSize, Math.round(inseamInches), currentGender);

            showResult(displayValue, `${genderText}  ${waistStyleText}  ${breakStyleText}`, sizeGuide, productLinks);
            
            // Update international sizes
            updateInternationalSizes(waistSize, Math.round(inseamInches), currentGender);
        }

        function getBreakDescription(style) {
            switch(style) {
                case 'cropped': return 'show your ankle for a fashion-forward look';
                case 'no-break': return 'just touch the top of your shoe for a clean, modern appearance';
                case 'slight': return 'create a tiny fold at the front for a classic look';
                case 'full': return 'stack the fabric for a relaxed, streetwear vibe';
                default: return 'create a tiny fold at the front for a classic look';
            }
        }

        function getSizeGuide(inseamInches, gender) {
            if (gender === 'male' || gender === 'unisex') {
                if (inseamInches < 28) {
                    return 'Extra Short (XS) - 26-27" inseam  Great for: Cropped styles, shorter builds';
                } else if (inseamInches < 30) {
                    return 'Short (S) - 28-29" inseam  Great for: Heights 5\'2"-5\'6"';
                } else if (inseamInches < 32) {
                    return 'Regular (R) - 30-31" inseam  Great for: Heights 5\'7"-5\'11"';
                } else if (inseamInches < 34) {
                    return 'Long (L) - 32-33" inseam  Great for: Heights 6\'0"-6\'2"';
                } else {
                    return 'Extra Long (XL) - 34"+ inseam  Great for: Heights 6\'3"+';
                }
            } else {
                if (inseamInches < 27) {
                    return 'Petite Short - 25-26" inseam  Great for: Heights under 5\'2"';
                } else if (inseamInches < 29) {
                    return 'Petite/Short - 27-28" inseam  Great for: Heights 5\'2"-5\'4"';
                } else if (inseamInches < 31) {
                    return 'Regular - 29-30" inseam  Great for: Heights 5\'5"-5\'7"';
                } else if (inseamInches < 33) {
                    return 'Tall - 31-32" inseam  Great for: Heights 5\'8"-5\'11"';
                } else {
                    return 'Extra Tall - 33"+ inseam  Great for: Heights 6\'0"+';
                }
            }
        }

        function generateProductLinks(waist, inseam, gender) {
            // UK-based shopping links (user is in London, England)
            const genderQuery = gender === 'male' ? 'mens' : gender === 'female' ? 'womens' : '';
            
            const links = [];

            // Levi's UK
            links.push({
                brand: "Levi's",
                specs: `${waist}W ${inseam}L`,
                url: `https://www.levi.com/GB/en_GB/search?q=${genderQuery}+jeans+${waist}+${inseam}`.replace(/\s+/g, '+')
            });

            // ASOS UK
            links.push({
                brand: "ASOS",
                specs: `${waist}W ${inseam}L`,
                url: `https://www.asos.com/search/?q=${genderQuery}+jeans+${waist}w+${inseam}l`.replace(/\s+/g, '+')
            });

            // Next UK
            links.push({
                brand: "Next",
                specs: `${waist}W ${inseam}L`,
                url: `https://www.next.co.uk/search?w=${genderQuery}+jeans+${waist}+waist+${inseam}+leg`.replace(/\s+/g, '+')
            });

            // Marks & Spencer UK
            links.push({
                brand: "M&S",
                specs: `${waist}W ${inseam}L`,
                url: `https://www.marksandspencer.com/s?q=${genderQuery}+jeans+${waist}+${inseam}`.replace(/\s+/g, '+')
            });

            // Uniqlo UK
            links.push({
                brand: "Uniqlo",
                specs: `${waist}W ${inseam}L`,
                url: `https://www.uniqlo.com/uk/en/search?q=${genderQuery}+jeans&quickView=false`.replace(/\s+/g, '+')
            });

            // John Lewis UK
            links.push({
                brand: "John Lewis",
                specs: `${waist}W ${inseam}L`,
                url: `https://www.johnlewis.com/search?search-term=${genderQuery}+jeans+${waist}+${inseam}`.replace(/\s+/g, '+')
            });

            console.log('Generated product links:', links); // Debug logging
            return links;
        }

        function showResult(value, label, guide, productLinks) {
            const resultDisplay = document.getElementById('resultDisplay');
            
            if (guide && productLinks) {
                let linksHTML = '<div class="product-links"><h3>Shop Your Size in the UK</h3>';
                productLinks.forEach(link => {
                    linksHTML += `
                        <a href="${link.url}" class="product-link" target="_blank" rel="noopener noreferrer">
                            <div class="brand-info">
                                <span class="brand-name">${link.brand}</span>
                                <span class="product-specs">${link.specs}</span>
                            </div>
                            <span class="link-arrow"></span>
                        </a>
                    `;
                });
                linksHTML += '</div>';

                const resultLabel = measurementType === 'height' ? 'Recommended Inseam' : 'Recommended Height';

                resultDisplay.innerHTML = `
                    <div class="result-value">${value}</div>
                    <p class="result-label">${resultLabel}  ${label}</p>
                    <div class="size-guide">
                        <h3>${measurementType === 'height' ? 'Size Recommendation' : 'Height Match'}</h3>
                        <p>${guide}</p>
                    </div>
                    ${linksHTML}
                `;
                
                // Show international sizes section
                document.getElementById('international-sizes').style.display = 'block';
            } else if (guide) {
                resultDisplay.innerHTML = `
                    <div class="result-value">${value}</div>
                    <p class="result-label">${label}</p>
                    <div class="size-guide">
                        <h3>Size Recommendation</h3>
                        <p>${guide}</p>
                    </div>
                `;
            } else {
                resultDisplay.innerHTML = `
                    <div class="ruler-icon"></div>
                    <p class="result-label">${value}</p>
                `;
                // Hide international sizes section on error
                document.getElementById('international-sizes').style.display = 'none';
            }
        }

        function updateInternationalSizes(waistInches, inseamInches, gender) {
            const waistCm = Math.round(waistInches * 2.54);
            const inseamCm = Math.round(inseamInches * 2.54);
            
            // UK Sizing (uses dress/trouser sizes: 6, 8, 10, 12, 14, 16, 18, etc.)
            let ukSize;
            if (gender === 'male') {
                // Men's UK trouser sizes: typically 28, 30, 32, 34, 36, 38, 40, 42 (waist in inches)
                ukSize = Math.round(waistInches / 2) * 2; // Round to nearest even number
                document.getElementById('uk-size').textContent = ukSize;
                document.getElementById('uk-detail').textContent = `${ukSize}" waist, ${inseamInches}" leg (S/R/L)`;
            } else {
                // Women's UK dress sizes: 6, 8, 10, 12, 14, 16, 18, 20
                // Correct conversion: waist 25" = size 6, 27" = 8, 29" = 10, 31" = 12, 33" = 14, 35" = 16
                // Formula: approximately (waist - 21) for sizes
                if (waistInches <= 25) ukSize = 6;
                else if (waistInches <= 27) ukSize = 8;
                else if (waistInches <= 29) ukSize = 10;
                else if (waistInches <= 31) ukSize = 12;
                else if (waistInches <= 33) ukSize = 14;
                else if (waistInches <= 35) ukSize = 16;
                else if (waistInches <= 37) ukSize = 18;
                else if (waistInches <= 39) ukSize = 20;
                else ukSize = 22;
                
                document.getElementById('uk-size').textContent = ukSize;
                document.getElementById('uk-detail').textContent = `Size ${ukSize} (${waistInches}" waist)`;
            }

            // US Sizing (uses different standards for men and women)
            let usSize;
            if (gender === 'male') {
                // Men's US: waist x inseam format (same as inches)
                usSize = `${waistInches}${inseamInches}`;
                document.getElementById('us-size').textContent = usSize;
                document.getElementById('us-detail').textContent = `${waistInches}" waist  ${inseamInches}" inseam`;
            } else {
                // Women's US dress sizes: 0, 2, 4, 6, 8, 10, 12, 14, 16
                // Conversion: waist 25" = size 2, 26" = 4, 27" = 6, 28" = 8, 29" = 10, 30" = 12, etc.
                if (waistInches <= 24) usSize = 0;
                else if (waistInches <= 25) usSize = 2;
                else if (waistInches <= 26) usSize = 4;
                else if (waistInches <= 27) usSize = 6;
                else if (waistInches <= 28) usSize = 8;
                else if (waistInches <= 29) usSize = 10;
                else if (waistInches <= 30) usSize = 12;
                else if (waistInches <= 32) usSize = 14;
                else if (waistInches <= 34) usSize = 16;
                else usSize = 18;
                
                document.getElementById('us-size').textContent = usSize;
                document.getElementById('us-detail').textContent = `Size ${usSize} (${waistInches}" waist)`;
            }

            // European Sizing (numeric size system based on waist circumference in cm divided by 2)
            let euSize;
            if (gender === 'male') {
                // Men's EU: waist in cm divided by 2 (e.g., 92cm = 46)
                euSize = Math.round(waistCm / 2);
                document.getElementById('eu-size').textContent = euSize;
                document.getElementById('eu-detail').textContent = `Taille ${euSize} (${waistCm}cm taille)`;
            } else {
                // Women's EU dress sizes: 32, 34, 36, 38, 40, 42, 44, 46
                // Conversion from UK: UK 6 = EU 34, UK 8 = EU 36, etc.
                euSize = ukSize + 28;
                document.getElementById('eu-size').textContent = euSize;
                document.getElementById('eu-detail').textContent = `Taille ${euSize} (${waistCm}cm taille)`;
            }

            // Italian Sizing (uses own dress size system)
            let itSize;
            if (gender === 'male') {
                // Men's Italian: similar to EU (44, 46, 48, 50, 52, 54)
                itSize = Math.round(waistCm / 2);
                document.getElementById('it-size').textContent = itSize;
                document.getElementById('it-detail').textContent = `Taglia ${itSize} (${waistCm}cm vita)`;
            } else {
                // Women's Italian dress sizes: 38, 40, 42, 44, 46, 48, 50
                // Conversion: UK 6 = IT 38, UK 8 = IT 40, UK 10 = IT 42, etc.
                itSize = ukSize + 32;
                document.getElementById('it-size').textContent = itSize;
                document.getElementById('it-detail').textContent = `Taglia ${itSize} (${waistCm}cm vita)`;
            }

            // Japanese Sizing (letter sizes S/M/L/XL or numeric waist in cm)
            let jpSize, jpNumeric;
            if (gender === 'male') {
                // Men's Japanese: S(26-28), M(29-31), L(32-34), XL(35-37), 2XL(38+)
                if (waistInches <= 28) { jpSize = 'S'; jpNumeric = '26-28'; }
                else if (waistInches <= 31) { jpSize = 'M'; jpNumeric = '29-31'; }
                else if (waistInches <= 34) { jpSize = 'L'; jpNumeric = '32-34'; }
                else if (waistInches <= 37) { jpSize = 'XL'; jpNumeric = '35-37'; }
                else { jpSize = '2XL'; jpNumeric = '38+'; }
            } else {
                // Women's Japanese sizes: 5, 7, 9, 11, 13, 15 (odd numbers)
                if (waistInches <= 24) { jpSize = '5 (XS)'; jpNumeric = '23-24'; }
                else if (waistInches <= 26) { jpSize = '7 (S)'; jpNumeric = '25-26'; }
                else if (waistInches <= 28) { jpSize = '9 (M)'; jpNumeric = '27-28'; }
                else if (waistInches <= 30) { jpSize = '11 (L)'; jpNumeric = '29-30'; }
                else { jpSize = '13 (XL)'; jpNumeric = '31+'; }
            }
            document.getElementById('jp-size').textContent = jpSize;
            document.getElementById('jp-detail').textContent = `${jpNumeric} (${waistCm}cm)`;

            // Indian Sizing (uses waist in inches, similar to US but with specific standards)
            const inSize = Math.round(waistInches / 2) * 2; // Round to nearest even number
            document.getElementById('in-size').textContent = inSize;
            document.getElementById('in-detail').textContent = `${inSize}"  (${inseamInches}" )`;

            // Russian Sizing (uses numeric system based on half chest/waist measurement)
            let ruSize;
            if (gender === 'male') {
                // Men's Russian: 44, 46, 48, 50, 52, 54, 56, 58
                ruSize = Math.round(waistCm / 2);
                if (ruSize % 2 !== 0) ruSize += 1;
                document.getElementById('ru-size').textContent = ruSize;
                document.getElementById('ru-detail').textContent = `${ruSize}  (${waistCm} )`;
            } else {
                // Women's Russian: 40, 42, 44, 46, 48, 50, 52
                ruSize = Math.round(waistCm / 2);
                if (ruSize % 2 !== 0) ruSize += 1;
                document.getElementById('ru-size').textContent = ruSize;
                document.getElementById('ru-detail').textContent = `${ruSize}  (${waistCm} )`;
            }
        }

        // Allow Enter key to calculate
        document.getElementById('height').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                calculateInseam();
            }
        });

        document.getElementById('waist-size').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                calculateInseam();
            }
        });
    </script>
</body>
</html>
